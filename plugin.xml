<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension point="org.eclipse.ui.preferencePages">
		<page 
	    	name="Go Editor"
	    	class="org.jf.goeditor.preferences.GoExplorePreferencePage"
    		id="org.jf.goeditor.preferences.GoExplorePreferencePage">
		</page>
		<page 
			name="Add a new command"
			category ="org.jf.goeditor.preferences.GoExplorePreferencePage"
			class="org.jf.goeditor.preferences.AddCommandPreferencePage"
			id="org.jf.goeditor.preferences.AddCommandPreferencePage">
		</page>
	</extension>
 
 
	<extension point="org.eclipse.ui.popupMenus">
		<objectContribution
			objectClass="org.eclipse.core.runtime.IAdaptable"
			id="org.jf.goeditor.contribution">
<!--
			<visibility>
				<or>
					<objectClass name="org.eclipse.core.resources.IResource" />
					<objectClass name="org.eclipse.ui.model.IWorkbenchAdapter" />
					<objectClass name="org.eclipse.jdt.core.ICompilationUnit" />
					<objectClass name="org.eclipse.core.resources.IProject"/>
					<objectClass name="org.eclipse.core.resources.IFolder"/>
					<objectClass name="org.eclipse.core.resources.IFile"/>
				</or>
			</visibility> 
-->
		<menu
            id="org.jf.goeditor.Menu" 
            path="additions" 
            label="%ActionSet.name"> 
            <separator name="group1"/> 
         </menu> 
         		<action
	         class="org.jf.goeditor.actions.GoMyCmdAction"
    	     definitionId="org.jf.goeditor.actions.GoMyCmdActionCommand"
        	 enablesFor="1"
           icon="icon/goMyCmd.gif"
	         id="org.jf.goeditor.actions.GoMyCmdAction"
    	     label="%MyCmdAction.name"
        	 menubarPath="org.jf.goeditor.Menu/group1">
			</action>		
			<action
	         class="org.jf.goeditor.actions.GoExploreAction"
	         definitionId="org.jf.goeditor.actions.GoExploreActionCommand"
	         enablesFor="1"
	         icon="icon/goexplore.gif"
	         id="org.jf.goeditor.actions.GoExploreAction"
	         label="%ExploreAction.name"
	         menubarPath="org.jf.goeditor.Menu/group1">
			</action>
						<action
	         class="org.jf.goeditor.actions.GoEditorAction"
	         definitionId="org.jf.goeditor.actions.GoEditorActionCommand"
	         enablesFor="1"
	         icon="icon/goeditor.gif"
	        
	         id="org.sf.goCexplore.actions.GoEditorAction"
	         label="%EditorAction.name"
	         menubarPath="org.jf.goeditor.Menu/group1">
			</action>
			<action
	         class="org.jf.goeditor.actions.GoTerminalAction"
	         definitionId="org.jf.goeditor.actions.GoTerminalActionCommand"
	         enablesFor="1"
	         icon="icon/gocommand.gif"
	         id="org.jf.goeditor.actions.GoTerminalAction"
	         label="%TerminalAction.name"
	         menubarPath="org.jf.goeditor.Menu/group1">
			</action>	
			<!-- Celinio Fernandes: extra slot for the MyCmd command -->
			
		</objectContribution>
	</extension>
    <extension point="org.eclipse.ui.commands">
	    <category
	          description="GoExplore: go os integration"
	          id="org.jf.goeditor.category"
	          name="GoExplore"/>
	    <command
	          categoryId="org.jf.goeditor.category"
	          description="Execute a system command on a file"
	          id="org.jf.goeditor.actions.GoTerminalActionCommand"
	          name="GoCommand"/> 
	    <command
	          categoryId="org.jf.goeditor.category"
	          description="Execute a system editor on a file"
	          id="org.jf.goeditor.actions.GoEditorActionCommand"
	          name="GoEditor"/>
	    <command
	          categoryId="org.jf.goeditor.category"
	          description="Open an explorer on a file"
	          id="org.jf.goeditor.actions.GoExploreActionCommand"
	          name="GoExplore"/>
	            <command
	          categoryId="org.jf.goeditor.category"
	          description="Open a user defined command"
	          id="org.jf.goeditor.actions.GoMyCmdActionCommand"
	          name="GoExplore"/>
 
	</extension>
	 
	<extension point="org.eclipse.ui.bindings">
    <key
          commandId="org.jf.goeditor.actions.GoTerminalActionCommand"
          contextId=" org.eclipse.ui.contexts.dialogAndWindow"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="Ctrl+C C"/>
   <key
          commandId="org.jf.goeditor.actions.GoEditorActionCommand"
          contextId="org.eclipse.ui.contexts.dialogAndWindow"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="Ctrl+C E"/>
    <key
          commandId="org.jf.goeditor.actions.GoMyCmdActionCommand"
          contextId="org.eclipse.ui.contexts.dialogAndWindow"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="Ctrl+C D"/>
  <key
          commandId="org.jf.goeditor.actions.GoExploreActionCommand"
          contextId="org.eclipse.ui.contexts.dialogAndWindow"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="Ctrl+C F"/>
	</extension>
    <extension point = "org.eclipse.ui.actionSets"	   >
	   <actionSet id="whatever0"
		 label="Go explore group" 
		   visible="true">
		   <menu id="here"
			   label="%ActionSet.name"
			   path="navigate/additions"> 
			   <separator name="slot1"/>
			   <separator name="slot2"/>
   			   <separator name="slot3"/>
   			    <separator name="slot4"/>
		   </menu>
		   		   <action id="org.jf.goeditor.actions.GoMyCmdActionSet"
			   menubarPath="navigate/here/slot4"			   
			   label="%MyCmdAction.name"
			   tooltip="MyCmd command"
			   helpContextId="whatever3"
			   icon="icon/goMyCmd.gif"
			     toolbarPath="Open My Command Here"
			   class="org.jf.goeditor.actions.GoMyCmdAction"
			     definitionId="org.jf.goeditor.actions.GoMyCmdActionCommand"
			   >				
		   </action>	

		   <action id="org.jf.goeditor.actions.GoTerminalActionSet"
			   menubarPath="navigate/here/slot3"			   
			   label="%TerminalAction.name"
			   tooltip="Opens a Terminal from here"
			   helpContextId="whatever2"
			      toolbarPath="Open Terminal here"
			   icon="icon/gocommand.gif"
			   class="org.jf.goeditor.actions.GoTerminalAction"
			 definitionId="org.jf.goeditor.actions.GoTerminalActionCommand"
			 
			   >				
		   </action>			   
		      <action id="org.jf.goeditor.actions.GoEditorActionSet"
			   menubarPath="navigate/here/slot2"			   
			   label="%EditorAction.name"
			   tooltip="Opens a Editor from here"
			   helpContextId="whatever2"
			   icon="icon/goeditor.gif"
			       toolbarPath="Edit With the configred system editor"
			   class="org.jf.goeditor.actions.GoEditorAction"
			    definitionId="org.jf.goeditor.actions.GoEditorActionCommand"
			  >				
		   </action>			   
	 <action id="org.jf.goeditor.actions.GoExploreActionSet"
			   menubarPath="navigate/here/slot1"
			   label="%ExploreAction.name"
			   tooltip="Opens FileManager from here"
			   helpContextId="whatever1"
			   icon="icon/goexplore.gif"
			   toolbarPath="open FileManager here"
		      class="org.jf.goeditor.actions.GoExploreAction"
		       definitionId="org.jf.goeditor.actions.GoExploreActionCommand"
			   >				
		   </action>	
 	   </actionSet>
   </extension>
 
     
   
          
